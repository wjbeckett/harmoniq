# .env.example - Copy to .env and fill in your values for local testing
# For Docker deployments, these should be set in the docker-compose.yml or environment

# --- Required Plex Configuration ---
PLEX_URL=http://YOUR_PLEX_IP:32400
PLEX_TOKEN=YOUR_PLEX_TOKEN
PLEX_MUSIC_LIBRARY_NAMES=Music # Comma-separated list of EXACT Plex music library names

# --- Scheduling & Timezone ---
RUN_INTERVAL_MINUTES=1440
TIMEZONE=UTC

# --- Last.fm Configuration (Required if Last.fm features are enabled) ---
LASTFM_API_KEY=YOUR_LASTFM_API_KEY
LASTFM_USER=YOUR_LASTFM_USERNAME

# --- Feature Flags (Enable/Disable specific playlist types) ---
ENABLE_LASTFM_CHARTS=true
ENABLE_LASTFM_RECS=true
ENABLE_TIME_PLAYLIST=true
# ENABLE_CUSTOM_1=false

# --- Playlist Naming ---
PLAYLIST_NAME_LASTFM_CHARTS=Last.fm Global Charts
PLAYLIST_NAME_LASTFM_RECS=Last.fm Discovery (Derived) # Indicate it's indirect if enabled
PLAYLIST_NAME_TIME=Daily Flow
# PLAYLIST_NAME_CUSTOM_1=My Custom Playlist

# --- Playlist Sizing ---
PLAYLIST_SIZE_LASTFM_CHARTS=50
PLAYLIST_SIZE_LASTFM_RECS=30
PLAYLIST_SIZE_TIME=40
# PLAYLIST_SIZE_CUSTOM_1=25

# --- Time Playlist Configuration ---
# Define time windows and criteria (moods/styles from Plex Sonic Analysis)
# Format: HH:MM-HH:MM:key1=ValA,ValB;key2=ValC;... separated by semicolons (;)
# Keys: 'moods', 'styles' (case-insensitive for values, will be capitalized)
# Example: Morning Chill (Midnight-9am), Afternoon Energy (9am-5pm), Evening Wind-down (5pm-Midnight)
TIME_WINDOWS="00:00-09:00:moods=Chill,Mellow,Peaceful,Relaxed;styles=Acoustic,Ambient;09:00-17:00:moods=Energetic,Excited,Happy,Rowdy,Upbeat;styles=Rock,Pop,Electronic;17:00-24:00:moods=Atmospheric,Brooding,Cool,Romantic,Sentimental,Serious,Sophisticated;styles=Jazz,Classical,Blues"

# --- Logging ---
LOG_LEVEL=INFO